<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Explore Users</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fafafa;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        .user-grid {
            display: flex;
            flex-direction: column; /* biar ke bawah */
            gap: 15px;
            margin-top: 30px;
            max-width: 500px;
            margin-inline: auto;
        }
        .user-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            padding: 15px;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: transform 0.2s ease;
        }
        .user-card:hover {
            transform: translateY(-3px);
        }
        .profile-pic {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            background-color: #eee;
        }
        .username {
            font-weight: 600;
            color: #000;
            text-decoration: none;
            font-size: 1.1rem;
        }
        .username:hover {
            text-decoration: underline;
        }
        .tagline {
            font-size: 0.9rem;
            color: #777;
        }
    </style>
</head>
<body>
    <h1>Explore Users</h1>

    <div class="user-grid">
        <% users.forEach(u => { %>
            <div class="user-card">
                <a href="/users/<%= u.id %>">
                    <img 
                        src="<%= u.UserProfile?.profilePicture || 'https://via.placeholder.com/100' %>" 
                        alt="Profile Picture" 
                        class="profile-pic"
                    >
                </a>
                <div>
                    <a href="/users/<%= u.id %>" class="username">@<%= u.username %></a>
                    <div class="tagline"><%= u.UserProfile?.tagLine || '' %></div>
                </div>
            </div>
        <% }) %>
    </div>
    <%- include('bottom') %>
</body>
</html>
