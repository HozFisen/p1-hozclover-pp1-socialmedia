<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %> — Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #fff;
      color: #000;
      font-family: 'Poppins', sans-serif;
    }
    .profile-header {
      text-align: center;
      padding: 40px 0 20px;
      border-bottom: 1px solid #ddd;
    }
    .profile-header img {
      width: 130px;
      height: 130px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #000;
    }
    .username {
      font-size: 1.6rem;
      font-weight: 600;
      margin-top: 10px;
    }
    .edit-profile {
      font-size: 0.95rem;
      color: #007bff;
      text-decoration: none;
      font-weight: 500;
    }
    .edit-profile:hover {
      text-decoration: underline;
    }
    .tagline {
      font-size: 0.95rem;
      color: #555;
      margin-top: 5px;
    }
    .post-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 10px;
      padding: 20px;
    }
    .post-item {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
    }
    .post-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }
    .post-item:hover img {
      transform: scale(1.05);
    }
    .post-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      font-size: 0.9rem;
      padding: 6px 10px;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    .post-item:hover .post-overlay {
      opacity: 1;
    }
    .navbar {
      background-color: #000;
    }
    .navbar-brand {
      color: #fff !important;
      font-weight: 600;
    }
    .btn-back {
      background: #000;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 8px 14px;
      transition: 0.2s;
    }
    .btn-back:hover {
      background: #333;
    }
  .delete-btn {
    display: none; /* default tersembunyi */
    position: absolute;
    top: 8px;
    right: 8px;
    z-index: 10;
  }

  .delete-btn button {
    padding: 6px 10px;
    font-size: 0.95rem; /* sedikit lebih besar */
  }

  .post-item:hover .delete-btn {
    display: block; /* muncul saat hover */
  }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">ECHOZ</a>
      <a href="/" class="btn-back ms-auto">Back to Feed</a>
    </div>
  </nav>

  <!-- Profile Header -->
  <div class="container">
    <div class="profile-header">
      <img 
        src="<%= user.UserProfile?.profilePicture || 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRlR_n4KeBSnrxA8Fl8xOiWLWxhvH0X6bKp8A&s' %>" 
        alt="User Profile Picture"
      >
      <div class="username"><%= user.username %></div>

      <div class="tagline"><%= user.UserProfile?.tagLine || 'No tagline yet.' %></div>

      <div>Location: <%= region %></div>

      <% if (user.UserProfile?.isPrivate) { %>
        <span class="badge bg-secondary">Private Account</span>
      <% } %>
      <% if (active.userId === user.id || active.role === 'admin') { %>
            <a href="/users/<%= user.id %>/edit" class="edit-profile d-block mt-2">Edit Profile</a>
            <% } %>
       </div>
      
<!-- User Posts -->
<% if (!user.UserProfile?.isPrivate || (active.userId === user.id || active.role === 'admin')) { %>
<div class="post-grid">
  <% if (user.Posts && user.Posts.length > 0) { %>
    <% user.Posts.forEach(post => { %>
      <div class="post-item">
        <img src="<%= post.imageUrl %>" alt="">
        <div class="post-overlay"><%= post.content.substring(0, 40) %>...</div>

       <% if (active.userId === user.id || active.role === 'admin') { %>
        <form action="/posts/<%= post.id %>/delete?userId=<%= user.id %>" method="POST" class="delete-btn">
        <button type="submit" class="btn btn-dark">Delete</button>
        </form>
    <% } %>

      </div>
    <% }) %>
  <% } else { %>
    <p class="text-center text-muted mt-4">This user hasn’t posted anything yet.</p>
  <% } %>
</div>
<% } else { %>
<div>
  <p style="text-align: center;">This user is privated!</p>
</div>
<% } %>
  <%- include('bottom') %>
</body>
</html>
