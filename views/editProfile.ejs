<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profil Pengguna</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .profile-pic-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .profile-pic-container img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .form-card {
            padding: 30px;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Edit Profil Pengguna</h2>

                    <!-- Form Edit Profile -->
                    <form action="/users/<%= data.UserId %>/edit" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="UserId" value="<%= data.UserId %>">
                        <!-- Foto Profil -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Foto Profil (URL)</label>
                            <div class="profile-pic-container">
                                <img id="previewProfilePic"
                                     src="<%= data.profilePicture || '/images/default-profile.png' %>" 
                                     alt="Foto Profil Saat Ini" class="me-4">
                                <div>
                                    <input class="form-control" type="url" id="profilePicture" name="profilePicture" 
                                           placeholder="Masukkan URL gambar..." value="<%= data.profilePicture || '' %>">
                                    <small class="form-text text-muted">Masukkan URL gambar yang valid.</small>
                                </div>
                            </div>
                        </div>


                        <!-- Nama Depan -->
                        <div class="mb-3">
                            <label for="firstName" class="form-label">Nama Depan</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" 
                                   value="<%= data.firstName %>" >
                        </div>

                        <!-- Nama Belakang -->
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Nama Belakang</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" 
                                   value="<%= data.lastName || '' %>">
                        </div>

                        <!-- Tagline -->
                        <div class="mb-3">
                            <label for="tagLine" class="form-label">Tagline / Bio Singkat</label>
                            <textarea class="form-control" id="tagLine" name="tagLine" rows="3" maxlength="150"><%= data.tagLine || '' %></textarea>
                            <small class="form-text text-muted">Maksimal 150 karakter.</small>
                        </div>

                        <!-- Privat Switch -->
                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" role="switch" id="isPrivate" name="isPrivate"
                              <%= data.isPrivate ? 'checked' : '' %>>
                            <label class="form-check-label" for="isPrivate">Jadikan Akun Privat</label>
                            <div class="form-text">Jika aktif, postingan Anda hanya dapat dilihat oleh pengikut yang disetujui.</div>
                        </div>

                        <button type="submit" class="btn btn-dark btn-lg w-100">Simpan Perubahan Profil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  // Preview gambar otomatis saat pilih file
  const profileInput = document.getElementById('profilePicture');
  const previewImg = document.getElementById('previewProfilePic');

  profileInput.addEventListener('change', function() {
    const file = this.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        previewImg.src = e.target.result;
      }
      reader.readAsDataURL(file);
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
